/* components/modal/modal.wxss */
.modal-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  z-index: 999;
}
.modal-wrap.hidden {
  visibility: hidden;
}
.modal__content {
  width: 540rpx;
  height: 670rpx;
  background-size: 100% 100%;
  transition: all 0.25s;
}
.modal__content.hidden {
  transform: scale(0);
}

.modal__close {
  width: 74rpx;
  height: 74rpx;
  background-size: 100% 100%;
  font-size: 60rpx;
  line-height: 74rpx;
  margin-top: 50rpx;
  text-align: center;
  color: white;
}
